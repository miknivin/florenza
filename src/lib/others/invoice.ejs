<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&display=swap");
      body {
        font-family: "Noto Sans", Arial, sans-serif; /* Prioritize Noto Sans, fallback to Arial */
      }
      .header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }
      .header img {
        width: 200px;
        height: auto;
        object-fit: contain;
      }
      .invoice-details {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }
      .office-address,
      .to {
        text-align: left;
      }
      table {
        margin: 0 auto;
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid #000;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #fefefe;
        color: #000;
      }
      .total {
        font-weight: bold;
      }
      .rupee {
        font-family: "Noto Sans", Arial !important; /* Force font for rupee symbol */
        font-weight: bold;
        color: #000;
      }
      .thank-you {
        text-align: center;
        margin-top: 20px;
      }
      .footer {
        text-align: center;
        margin-top: 20px;
        font-size: 12px;
        color: #666;
      }
    </style>
  </head>
  <body>
    <div>
      <div class="header">
        <img
          src="https://ik.imagekit.io/c1jhxlxiy/logo-black.png?updatedAt=1759311049739"
          alt="Florenza Italia Logo"
        />
        <h1><b>INVOICE</b></h1>
      </div>
      <div class="invoice-details">
        <div class="office-address">
          <p><b>Office Address</b></p>
          <p>63/695 Old No. 5/3283G 6th Tower, Kozhikode Mavoor Road,</p>
          <p>Kozhikode, Kerala, 673001</p>
          <p><b>GST No:</b> 32AAIFO0471H1ZI</p>
        </div>
        <div class="to">
          <p><b>To</b></p>
          <p><%= order.shippingInfo.fullName %></p>
          <p>
            <%= order.shippingInfo.address %>, <%= order.shippingInfo.city %>,
            <%= order.shippingInfo.state %>, <%= order.shippingInfo.zipCode %>,
            <%= order.shippingInfo.country %>
          </p>
          <p>
            <b>Date</b> <%= new Date(order.createdAt).toLocaleDateString() %>
          </p>
          <p><b>Invoice</b> #<%= order._id.toString().slice(-6) %></p>
        </div>
      </div>
      <table>
        <tr>
          <th><b>Items Description</b></th>
          <th><b>Unit Price</b></th>
          <th><b>Qty</b></th>
          <th><b>Total</b></th>
        </tr>
        <% order.orderItems.forEach(item => { %>
        <tr>
          <td><b><%= item.name %></b><br /><%= item.variant %></td>
          <td><span class="rupee">₹</span><%= item.price %></td>
          <td><%= item.quantity %></td>
          <td><span class="rupee">₹</span><%= item.price * item.quantity %></td>
        </tr>
        <% }) %>
        <tr>
          <td colspan="3" class="total">TOTAL</td>
          <td><span class="rupee">₹</span><%= order.itemsPrice %></td>
        </tr>
        <tr>
          <td colspan="3" class="total">TAX</td>
          <td><%= order.taxAmount %></td>
          <!-- Tax might not need rupee if it's a rate -->
        </tr>
        <tr>
          <td colspan="3" class="total">SHIPPING</td>
          <td><span class="rupee">₹</span><%= order.shippingAmount %></td>
        </tr>
        <% if (order.couponApplied !== 'No') { %>
        <tr>
          <td colspan="3" class="total">DISCOUNT</td>
          <td>
            <span class="rupee">₹</span><%= order.itemsPrice + order.taxAmount +
            order.shippingAmount - order.totalAmount %>
          </td>
        </tr>
        <% } %>
        <tr>
          <td colspan="3" class="total">Grand Total</td>
          <td><span class="rupee">₹</span><%= order.totalAmount %></td>
        </tr>
      </table>
      <div class="thank-you">
        <p><b>Thank you for your Business</b></p>
      </div>
      <div class="footer">
        <p>+91 884 810 1280</p>
        <p>info@florenzaitaliya.com</p>
      </div>
    </div>
  </body>
</html>
